<%- include ('../partials/header'); %>
<title>Edit Product</title>
<%- include ('../partials/navbar'); %>
<link rel="stylesheet" type="text/css" href="/styles/utils.css">


    <div class="container">
      <h2 class="py-2 page_title">Edit Product:</h2>
      <form action="/products/product/<%= product._id %>/edit?_method=PUT" method="POST">
        <div class="form-group">
          <label><h6>Product Name:</h6></label>
          <input autocomplete="off" autofocus class="form-control" name="product[product_name]" value="<%= product.product_name %>" placeholder="Product Name" type="text" required>
        </div>
        <div class="row">
            <div class="col-lg-2 form-group">
                <p>Product Description:</p>
            </div>
            <div class="col-lg-4 form-group">
                <input autocomplete="off" autofocus class="form-control" name="product[product_description][manufacturer]" value="<%= product.product_description.manufacturer %>" placeholder="Product Manufacturer" type="text" required>
            </div>
            <div class="col-lg-4 form-group">
                <input autocomplete="off" autofocus class="form-control" name="product[product_description][release_date]" value="<%= product.product_description.release_date %>" placeholder="Product Release Date" type="text" required>
            </div>
        </div>
        <div class="form-group">
            <p>Category :</p>
			<select class="form-control dropdown_search" name="product[category]" required>
                <%
                    var options = categorys;
                    for ( var i = 0; i < options.length; i++ )
                    {
                        var selected = ( product.category.categorgy_name === options[i].categorgy_name ) ? "selected" : "";
                        %><option value="<%=options[ i ]._id %>" <%=selected %>><%=options[i].categorgy_name %></option><%
                    }
                %>
			</select>
        </div>
        <div class="form-group">
            <label><h6>Product Price:</h6></label>
            <input autocomplete="off" autofocus class="form-control" name="product[price]" value="<%= product.price %>" placeholder="Price" type="number" required>
        </div>
        <button class="button zoom my-3" type="submit">Submit</button>
      </form>
      </div>
		
</div>



<%- include ('../partials/footer'); %>
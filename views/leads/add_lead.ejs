<%- include ('../partials/header'); %>
<title>Add Lead</title>
<%- include ('../partials/navbar'); %>
<link rel="stylesheet" type="text/css" href="/styles/utils.css">
	
<div class="container">
	<h2 class="py-2 page_title">Add Lead:</h2>
	<form onsubmit="return confirmPassword(event);" action="/leads" method="POST">
		<div class="row">
			<div class="col-lg-4 form-group">
				<input autocomplete="off" autofocus class="form-control" name="lead[first_name]" placeholder="First Name" type="text" required>
			</div>
			<div class="col-lg-4 form-group">
				<input autocomplete="off" autofocus class="form-control" name="lead[middle_name]" placeholder="Middle Name" type="text" required>
			</div>
			<div class="col-lg-4 form-group">
				<input autocomplete="off" autofocus class="form-control" name="lead[last_name]" placeholder="Last Name" type="text" required>
			</div>	
		</div>
		<div class="form-group">
			<input autocomplete="off" autofocus class="form-control" name="lead[company_name]" placeholder="Company Name" type="text" required> 
		</div>    					
		<div class="form-group">
			<input autocomplete="off" autofocus class="form-control" name="lead[username]" placeholder="Email Address" type="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$"  required>
		</div>
		<div class="form-group">
			<input autocomplete="off" autofocus class="form-control" name="lead[phone_number]" placeholder="Phone Number" type="text" required>
		</div> 
		<div class="form-group">
			<p>Company Details:</p>
		</div>
		<div class="form-group">
			<input autocomplete="off" autofocus class="form-control" name="lead[company_website]" placeholder="Company Website" type="text" required>
		</div>
		<div class="form-group">
			<input autocomplete="off" autofocus class="form-control" name="lead[comapny_emailAddress]" placeholder="Company Email Address" type="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$"  required>
		</div>
		<div class="form-group">
			<input autocomplete="off" autofocus class="form-control" name="lead[company_address][street]" placeholder="Street" type="text" required>
		</div>    	
		<div class="row">
			<div class="col-lg-4 form-group">
				<select class="form-control dropdown_search" name="lead[company_address][city]" required>
					<option value="">City</option><option value="Navsari">Navsari</option><option value="Surat">Surat</option>
			</select>
			</div>
			<div class="col-lg-4 form-group">
				<select class="form-control dropdown_search" name="lead[company_address][state]" required>
						<option value="">State</option><option value="Gujarat">Gujarat</option>
				</select>
			</div>
			<div class="col-lg-4 form-group">
				<input autocomplete="off" autofocus class="form-control" name="lead[company_address][zip]" placeholder="Zip" type="text" required>
			</div>
		</div>
		<div class="form-group">
			<p>Assign to User:</p>
			<select class="form-control dropdown_search" name="lead[assigned_to]" required>
				<% users.forEach(function(user){ %>
				  <option value="<%= user._id %>"><%= user.username %></option>
				<% }) %>
			</select>
		</div>
		<div class="form-group">
			<p>Notes:</p>
			<textarea name="lead[notes]"></textarea>
		</div> 	    
		<button class="button zoom" type="submit">Submit</button>
	</form>
</div>


<%- include ('../partials/footer'); %>
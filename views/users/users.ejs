<%- include ('../partials/header'); %>
<link rel="stylesheet" type="text/css" href="/styles/utils.css">
<title>Users</title>
<%- include ('../partials/navbar'); %>

  <h1 class="page_title pt-2">Users</h1>

  <div class="util-btn">
    <a href="/users/add" class="button">Create New User</a>
  </div>

  <div class="item_table my-1 table-responsive">
    

      <table class="displayUsers table table-striped" id="myTable" style="width: 100%;">
          <thead>
              <tr>
                <th>Username:</th>
                <th>First Name:</th>
                <th>Middle Name:</th>
				        <th>Last Name:</th>
                <th>Eamil Address:</th>
                <th>Phone Number:</th>
                <th>City:</th>
                <th>User Permissions:</th>
                <th>Utils:</th>
              </tr>
          </thead>

          <tbody class="tableData">
			  
				<% users.forEach(function(user){ %>
				  	
						<tr>
							<td><%= user.username %></td>
							<td><%= user.first_name %></td>
							<td><%= user.middle_name %></td>
							<td><%= user.last_name %></td>
              <td><%= user.email_address %></td>
              <td><%= user.phone_number %></td>
              <td><%= user.city %></td>
							<td><%= user.user_permissions %></td>
              <td>
                <button class="button"><a href="/users/<%= user._id %>" style="color: white;">Details</a></button>
              </td>
						</tr>

			  	<% }) %>
			  
          </tbody>

        </table>
  </div>

<%- include ('../partials/footer'); %>
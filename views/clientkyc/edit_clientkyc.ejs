<%- include ('../partials/header'); %>
<title>Edit Client's KYC</title>
<%- include ('../partials/navbar'); %>
<link rel="stylesheet" type="text/css" href="/styles/utils.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

	
	<div>
            <div class="container">
                <h2 class="py-2 page_title">Edit Client:
				<% if (client_info.organization_name) { %>
				<%= client_info.organization_name %>
				<% } else { %>
					<%= client_info.first_name %> <%= client_info.middle_name %> <%= client_info.last_name %>
				<% } %> 				
				</h2>
                <form enctype="multipart/form-data" action="/clientkyc/<%= client_info._id %>?_method=PUT" method="POST">
					<div>
						<div class="form-group">
							<h5>Client Form:</h5>
						</div> 
						<div class="row">
							<div class="col-lg-4 form-group">
								<select class="form-control dropdown_search" name="detail[CFDocumentName]" required>
										<option value="Client Form">Client Form</option>
								</select>
							</div>
							<div class="col form-group">
								<div class="input-group mb-3">
									<div class="input-group-prepend">
									  <span class="input-group-text" style="background-color: rgba(6, 16, 34, 1); color: white;">Upload</span>
									</div>
									<div class="custom-file">
									  <input type="file" class="custom-file-input" id="CF" name="CF" accept="application/pdf">
									  <label class="custom-file-label" for="CF">Choose file</label>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div>
						<div class="form-group">
							<h5>Photograph Of Client:</h5>
						</div> 
						<div class="row">
							<div class="col-lg-4 form-group">
								<select class="form-control dropdown_search" name="detail[POODocumentName]" required>
										<option value="Photograph Of Client">Photograph Of Client</option>
								</select>
							</div>
							<div class="col form-group">
								<div class="input-group mb-3">
									<div class="input-group-prepend">
									  <span class="input-group-text" style="background-color: rgba(6, 16, 34, 1); color: white;">Upload</span>
									</div>
									<div class="custom-file">
									  <input type="file" class="custom-file-input" name="POO" id="POO">
									  <label class="custom-file-label" for="POO">Choose file</label>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div>
						<div class="form-group">
							<h5>Proof Of Address of Business Owner:</h5>
						</div> 
						<div class="row">
							<div class="col-lg-4 form-group">
								<select class="form-control dropdown_search" name="detail[POABODocumentName]" required>
										<option value="">Proof Of Address of Business Owner</option>
										<option value="Aadhar Card">Aadhar Card</option>
										<option value="Electricity Bill">Electricity Bill</option>
										<option value="Gas Bill">Gas Bill</option>
								</select>
							</div>
							<div class="col form-group">
								<input type="text" class="form-control" name="detail[POABOCertificateNumber]" id="POABOCertificateNumber" placeholder="Certificate Number" required>
							</div>
							<div class="col form-group">
								<div class="input-group mb-3">
									<div class="input-group-prepend">
									  <span class="input-group-text" style="background-color: rgba(6, 16, 34, 1); color: white;">Upload</span>
									</div>
									<div class="custom-file">
									  <input type="file" class="custom-file-input" name="POABO" id="POABO">
									  <label class="custom-file-label" for="POABO">Choose file</label>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div>
						<div class="form-group">
							<h5>Proof Of Identity of Business Owner:</h5>
						</div> 
						<div class="row">
							<div class="col-lg-4 form-group">
								<select class="form-control dropdown_search" name="detail[POIBODocumentName]" required>
										<option value="">Proof Of Identity of Business Owner</option>
										<option value="Income Tax Registration">Income Tax Registration</option>
								</select>
							</div>
							<div class="col form-group"> 
								<input type="text" class="form-control" name="detail[POIBOCertificateNumber]" id="POIBOCertificateNumber" placeholder="Certificate Number" required>
							</div>
							<div class="col form-group">
								<div class="input-group mb-3">
									<div class="input-group-prepend">
									  <span class="input-group-text" style="background-color: rgba(6, 16, 34, 1); color: white;">Upload</span>
									</div>
									<div class="custom-file">
									  <input type="file" class="custom-file-input" name="POIBO" id="POIBO">
									  <label class="custom-file-label" for="POIBO">Choose file</label>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div>
						<div class="form-group">
							<h5>Proof Of Business Identity & Existence:</h5>
						</div> 
						<div class="row">
							<div class="col-lg-4 form-group">
								<select class="form-control dropdown_search" name="detail[POBIEDocumentName]" required>
										<option value="">Proof Of Business Identity & Existence</option>
										<option value="VAT Registration">VAT Registration</option>
										<option value="Shops and Establishments Certificate">Shops and Establishments Certificate</option>
										<option value="Sales Tax Certificate">Sales Tax Certificate</option>
								</select>
							</div>
							<div class="col form-group">
								<input type="text" class="form-control" name="detail[POBIECertificateNumber]" id="POBIECertificateNumber" placeholder="Certificate Number" required>
							</div>
							<div class="col form-group">
								<div class="input-group mb-3">
									<div class="input-group-prepend">
									  <span class="input-group-text" style="background-color: rgba(6, 16, 34, 1); color: white;">Upload</span>
									</div>
									<div class="custom-file">
									  <input type="file" class="custom-file-input" name="POBIE" id="POBIE">
									  <label class="custom-file-label" for="POBIE">Choose file</label>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div>
						<div class="form-group">
							<h5>GST Certificate:</h5>
						</div> 
						<div class="row">
							<div class="col-lg-4 form-group">
								<select class="form-control dropdown_search" name="detail[GSTDocumentName]" required>
										<option value="GST Certificate">GST Certificate</option>
								</select>
							</div>
							<div class="col form-group">
								<input type="text" class="form-control" name="detail[GSTCertificateNumber]" id="GSTCertificateNumber" placeholder="Certificate Number" required>
							</div>
							<div class="col form-group">
								<div class="input-group mb-3">
									<div class="input-group-prepend">
									  <span class="input-group-text" style="background-color: rgba(6, 16, 34, 1); color: white;">Upload</span>
									</div>
									<div class="custom-file">
									  <input type="file" class="custom-file-input" name="GSTCertificate" id="GSTCertificate">
									  <label class="custom-file-label" for="GSTCertificate">Choose file</label>
									</div>
								</div>
							</div>
						</div>
					</div>
                    <button class="button zoom" type="submit">Submit</button>
                </form>
            </div>
        </div>

<script>
	$(function() {
  $('input[type=file]').change(function(event){
		var label = $("label[for='"+this.id+"']")
		var t = $(this).val();
		var labelText = 'File : ' + t.substr(12, t.length);
		label[0].innerText = labelText;
  })
});
</script>
<%- include ('../partials/footer'); %>
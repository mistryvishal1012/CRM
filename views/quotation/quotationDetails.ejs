<%- include ('../partials/header'); %>
<title>Quotation</title>
<link rel="stylesheet" type="text/css" href="/styles/information_card.css">
<link rel="stylesheet" type="text/css" href="/styles/utils.css">
<%- include ('../partials/loginNavbar'); %>



    <h1 class="page_title pt-5 m-5">Quotation Information : <%= dealer.quotation_id %></h1>
    <div class="row px-4 m-5">
		<div class="col-xl-6">
                <div class="card_content">
                    <div class="row stripe_1 block_info">
                        <div class="col-lg-6">
                            <p class="title">Organization Name:</p>
                        </div>
                        <div class="col-lg-6">
                            <% if (dealer.company_name) { %>
                                <p class="info"><%= dealer.company_name %></p> 
                            <% } else { %>
                                <p class="info"><%= dealer.last_name %>, <%= dealer.first_name %> <%= dealer.middle_name %></p> 
                            <% } %> 
                        </div>
                    </div>
                    <div class="row stripe_2 block_info">
                        <div class="col-lg-6">
                            <p class="title">Contact Name:</p>
                        </div>
                        <div class="col-lg-6">
                            <p class="info"><%= dealer.first_name %> <%= dealer.middle_name %> <%= dealer.last_name %></p> 
                        </div>
                    </div>
                    <div class="row stripe_1 block_info">
                        <div class="col-lg-6">
                            <p class="title">Email Address:</p>
                        </div>
                        <div class="col-lg-6">
                            <p class="info"><%= dealer.username %></p>
                        </div>
                    </div>
                    <div class="row stripe_2 block_info">
                        <div class="col-lg-6">
                            <p class="title">Phone Number:</p>
                        </div>
                        <div class="col-lg-6">
                            <p class="info"><%= dealer.phone_number %></p> 
                        </div>
                    </div>
                    <div class="row stripe_1 block_info">
                        <div class="col-lg-6">
                            <p class="title">Address:</p>
                        </div>
                        <div class="col-lg-6">
                            <p><%= dealer.company_address.street %></p>
                            <p><%= dealer.company_address.city %>, <%= dealer.company_address.state %> <%= dealer.company_address.zip %></p>
                        </div>
                    </div>
                    <div class="row stripe_2 block_info">
                        <div class="col-lg-6">
                            <p class="title">Company Email Address:</p>
                        </div>
                        <div class="col-lg-6">
                            <p class="info"><%= dealer.comapny_emailAddress %></p> 
                        </div>
                    </div>
                </div>
            </div>

                <div class="col-xl-6">

                    <div class="card_content">
                        <h3>Products:</h3>
                        <table class="displayUsers stripe" id="myTable">
                              <thead>
                                  <tr>
                                    <th>Product Name:</th>
                                    <th>Product Quantity:</th>								
                                  </tr>
                              </thead>
        
                              <tbody class="tableData">
        
                                    <% dealer["selectedproduct"].forEach(function(product){ %>
        
                                            <tr>
                                                <td><%= product.name %></a></td>
                                                <td><%= product.quantity %></td>
                                            </tr>
        
                                    <% }) %>
        
                              </tbody>
                        </table>
                    </div>	
                    <div class="card_content my-3">
                        <p><h6>This is Your Quotation Summary Generated By Computer and it will be mailed you shortly for future Inquiry.</h6></p>
                        <p><h6>The Administartor will respond to your asked Quotataion shortly.</h6></p>
                    </div>
                </div>        
                
            </div>

<%- include ('../partials/footer'); %>